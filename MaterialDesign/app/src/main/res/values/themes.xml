<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MaterialDesign" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/indigo_200</item>
        <item name="colorPrimaryVariant">@color/indigo_400</item>
        <item name="colorOnPrimary">@color/brown_800</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/indigo_600</item>
        <item name="colorSecondaryVariant">@color/indigo_900</item>
        <item name="colorOnSecondary">@color/grey_200</item>
        <item name="appBarLayoutStyle">@style/Widget.App.Toolbar</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textAppearanceHeadline1">@style/MyHeadLine1</item>
        <item name="textAppearanceBody2">@style/MyBody2</item>
        <item name="textAppearanceButton">@style/MyButton</item>
<item name="bottomNavigationStyle">@style/Theme.MaterialDesign.BottomNavigationView</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MyToolbar.Primary</item>
    </style>
    <style name="ThemeOverlay.MyToolbar.Primary" parent="">
        <item name="colorPrimary">@color/indigo_600</item>
    </style>
    <style name="Theme.MaterialDesign.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="materialThemeOverlay">@style/Theme.MaterialDesign.BottomNavigationStyleNew</item>
    </style>
<style name="Theme.MaterialDesign.BottomNavigationStyleNew" parent="">
    <item name="colorPrimary">@color/white</item>
    <item name="colorPrimaryVariant">@color/indigo_600</item>
    <item name="colorOnPrimary">@color/brown_800</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/indigo_800</item>
    <item name="colorSecondaryVariant">@color/indigo_900</item>
    <item name="colorOnSecondary">@color/grey_200</item>
<item name="colorSurface">@color/indigo_600</item>

</style>
    <style name="Theme.MaterialDesign.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MaterialDesign.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MaterialDesign.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyHeadLine1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textAllCaps">true</item>
<item name="fontFamily">casual</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="MyBody2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">cursive</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="MyButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
    </style>

</resources>